@page
@model ItemsFeedModel
@{
    ViewData["Title"] = "Items Feed";
}

<div class="container mt-4">
    <h2>Items Feed (Async Enumerable)</h2>
    <p class="lead">Demonstrates GetItemsFeed() for efficient pagination of large datasets using async enumerable.</p>

    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">Query Code</h5>
        </div>
        <div class="card-body">
            <pre><code>var query = _client.GetItemsFeed()
    .Where(f => f.System("type").IsEqualTo("article"))
    .OrderBy("system.last_modified", OrderingMode.Descending);

await foreach (var item in query.EnumerateItemsAsync())
{
    // Process each item as it's retrieved
    items.Add(item);
    if (items.Count >= maxItems) break;
}</code></pre>
        </div>
    </div>

    @if (Model.IsSuccess)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> Retrieved @Model.Items!.Count items in @Model.ExecutionTime.TotalMilliseconds ms
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Retrieved Items (Max @Model.MaxItems)</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var item in Model.Items)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">@item.System.Name</h6>
                            <small class="text-muted">@item.System.LastModified.ToString("yyyy-MM-dd HH:mm")</small>
                        </div>
                        <p class="mb-1">
                            <strong>Type:</strong> <code>@item.System.Type</code> |
                            <strong>Codename:</strong> <code>@item.System.Codename</code>
                        </p>
                    </div>
                }
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <strong>Note:</strong> GetItemsFeed() is designed for efficiently processing large datasets by streaming results.
            It automatically handles pagination internally.
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @Model.ErrorMessage
        </div>
    }
</div>
