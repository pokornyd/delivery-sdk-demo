@page
@model SingleItemModel
@{
    ViewData["Title"] = "Get Single Item";
}

<div class="container mt-4">
    <h2>Get Single Item</h2>
    <p class="lead">Demonstrates GetItem() method for retrieving a single content item by codename.</p>

    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">Query Code</h5>
        </div>
        <div class="card-body">
            <pre><code>var result = await _client.GetItem("@Model.Codename").ExecuteAsync();</code></pre>
        </div>
    </div>

    @if (Model.IsSuccess)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> Retrieved item in @Model.ExecutionTime.TotalMilliseconds ms
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Content Item: @Model.Item!.System.Name</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 200px;">System Property</th>
                        <th>Value</th>
                    </tr>
                    <tr>
                        <td><strong>Codename</strong></td>
                        <td><code>@Model.Item.System.Codename</code></td>
                    </tr>
                    <tr>
                        <td><strong>Type</strong></td>
                        <td><code>@Model.Item.System.Type</code></td>
                    </tr>
                    <tr>
                        <td><strong>Language</strong></td>
                        <td><code>@Model.Item.System.Language</code></td>
                    </tr>
                    <tr>
                        <td><strong>Last Modified</strong></td>
                        <td>@Model.Item.System.LastModified</td>
                    </tr>
                </table>

                <p class="mt-3 text-muted">Elements are accessed through strongly-typed properties on the Elements model.</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @Model.ErrorMessage
        </div>
    }
</div>
